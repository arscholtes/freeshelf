%link{:href => "app/assets/stylesheets/application.css", :rel => "stylesheet"}/

%h1 Book List
%table
  %tr
    %th Title
    %th Author
    %th Synopsis
    %th Url
  - @books.each do |book|
    %tr
      %td= book.title
      %td= book.author
      %td= book.discription
      %td= book.url
      %td= link_to 'Show', book_path(book)
    - if user_signed_in?
      %div{:class => "buttons>"}
        %td= link_to 'Edit', edit_book_path(book)
        %td= link_to 'Delete', book_path(book), |
      method: :delete,                          |
      data: { confirm: 'Are you sure?' }        |
