= form_for :book, url: books_path do |f|
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.label :author
    %br/
    = f.text_field :author
  %p
    = f.label :discription
    %br/
    = f.text_area :discription
  %p
    = f.label :url
    %br/
    = f.text_field :url
  %p
    = f.submit
