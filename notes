= link_to 'New Book', new_book_path

= link_to 'Book List', controller: 'books'

%p.sign_in= link_to "Login", new_user_session_path



= form_for :book, url: books_path do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited
        this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :title
    %br/
    = f.text_field :title
  %p
    = f.label :author
    %br/
    = f.text_field :author
  %p
    = f.label :discription
    %br/
    = f.text_area :discription
  %p
    = f.label :url
    %br/
    = f.text_field :url
  %p
    = f.submit
= link_to 'Back', articles_path



%h1 Edit Book
= form_for(@book) do |f|
  - if @book.errors.any?
    #error_explanation
      %h2
        = pluralize(@book.errors.count, "error")
        prohibited
        this book from being saved:
      %ul
        - @book.errors.full_messages.each do |msg|
          %li= msg
          %p
            = f.label :title
            %br/
            = f.text_field :title
          %p
            = f.label :author
            %br/
            = f.text_field :author
          %p
            = f.label :discription
            %br/
            = f.text_area :discription
          %p
            = f.label :url
            %br/
            = f.text_field :url  %p
    = f.submit
= link_to 'Back', books_path
